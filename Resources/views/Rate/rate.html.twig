{% extends param('ccdn_forum_karma.rate.rate.layout_template') %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{- asset('bundles/ccdncomponentbbcode/css/bbcode.css') -}}" rel="stylesheet" type="text/css">
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{- asset('bundles/ccdncomponentbbcode/js/jquery.bbeditor.js') -}}" type="text/javascript"></script>
{% endblock %}

{% block title %}{{- truncDot('title.karma.rate' | trans({'%post_id%': post.getId }, 'CCDNForumKarmaBundle'), param('ccdn_forum_karma.seo.title_length')) -}}{% endblock %}

{% block sidebar %}
	{{ parent() }}

{% endblock %}

{% block body %}

	{%- spaceless -%}

	{%- include 'CCDNComponentCommonBundle:Flashes:flashes.html.twig' -%}

	{%- include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } -%}

	<h2>{{- 'title.karma.rate' | trans({'%post_id%': post.getId }, 'CCDNForumKarmaBundle') -}}</h2>

	{%- form_theme form param('ccdn_forum_karma.rate.rate.form_theme') -%}
	<form action="{{- path('cc_forum_karma_rate', { 'post_id': post.id }) -}}" method="post" {{ form_enctype(form) }} class="form-horizontal">
		<fieldset>

			{{- form_errors(form) -}}

			<div class="control-group"><div class="controls row-fluid">{{- form_row(form._token) -}}</div></div>

			<div class="control-group">
				<label for="topic_title" class="control-label">{{- 'form.label.topic.title' | trans({}, 'CCDNForumForumBundle') -}}</label>
				<div class="controls row-fluid">
					<input type="text" id="topic_title" value="{{- post.getTopic.getTitle -}}" disabled class="input-xlarge span8">
				</div>
			</div>

			<div class="control-group{{- (form.is_positive.vars.errors|length > 0) ? ' error': '' -}}">
				{#{{- form_label(form.is_positive, null, { 'label': 'form.label.karma.is_positive'| trans({}, 'CCDNForumKarmaBundle') }) -}}#}
				<label id="karma_is_positive" class="control-label" for="Karma[is_positive]">{{- 'form.label.karma.is_positive'| trans({}, 'CCDNForumKarmaBundle') -}}<span style="color:#f00;" title="{{- 'form.field.required' |trans({}, 'CCDNForumKarmaBundle') -}}">*</span></label>
				<div class="controls row-fluid">
					{{- form_errors(form.is_positive) -}}
					{{- form_widget(form.is_positive) -}}
				</div>
			</div>

			<div class="control-group{{- (form.comment.vars.errors|length > 0) ? ' error': '' -}}">
				{{- form_label(form.comment, null, { 'label': 'form.label.karma.comment'| trans({}, 'CCDNForumKarmaBundle') }) -}}
				<div class="controls row-fluid">
					{{- form_errors(form.comment) -}}
					{%- if param('ccdn_forum_karma.rate.rate.enable_bb_editor') -%}
						{%- form_theme form 'CCDNComponentBBCodeBundle:Form:fields.html.twig' -%}
					{%- endif -%}
					{{- form_widget(form.comment) -}}
				</div>
			</div>

			<div class="form-actions">
				<input type="submit" class="btn btn-primary" value="{{- 'form.button.karma.submit' | trans({}, 'CCDNForumKarmaBundle') -}}">
			</div>

		</fieldset>
	</form>

	{%- include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } -%}

	{%- endspaceless -%}

{% endblock %}
